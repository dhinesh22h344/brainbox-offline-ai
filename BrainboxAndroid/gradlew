#!/bin/sh
#
# Gradle wrapper - runs Gradle using gradle-wrapper.jar
#
set -e
SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"
WRAPPER_JAR="$SCRIPT_DIR/gradle/wrapper/gradle-wrapper.jar"
if [ ! -f "$WRAPPER_JAR" ]; then
  echo "gradle-wrapper.jar not found. Run this from Android Studio or ensure wrapper is installed." >&2
  exit 1
fi
exec java -jar "$WRAPPER_JAR" "$@"
